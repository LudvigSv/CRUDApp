            <div class="col-sm-10">
                <input type="text " id="destinationInput " name="destinationInput" placeholder="Atlanta, GA">
            </div>
    </div>

    <div class="form-group row">
        <label for="pickupLocationInput" class="col-sm-2 col-form-label">
            <b>Pickup Location</b>
        </label>
        <div class="col-sm-10">
            <input type="text " name="pickupLocationInput " id="pickupLocationInput " placeholder="123 main st, Miami">
        </div>
    </div>

